{
    "id": "local-exec-test",
    "description": "Test local_shell hook: runs echo",
    "tasks": [
        {
            "id": "run_echo",
            "handler": "hook",
            "hook": {
                "name": "local_shell",
                "args": {
                    "command": "echo",
                    "args": "hello from local_shell"
                }
            },
            "transition": {
                "branches": [
                    {
                        "operator": "default",
                        "goto": "end"
                    }
                ]
            }
        }
    ],
    "token_limit": 2048
}